{

    
"languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp" ,"c++","cc"],
            "rootPatterns": ["build/",".ccls",".clang-format",".git"], 
            "initializationOptions": {
               "cache": {
                    "directory": "/tmp/ccls"
                },
		"index": {"threads": 2},
                "highlight": { "lsRanges" : true },
		"client" : {
			   "snippetSupport": true
		},
		"compilationDatabaseDirectory" :"./build/debug_0" 

		
            }
},
 "haskell": {
      "command": "haskell-language-server",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
	".git/",
	"src",
	"build/",
	"Main.hs"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
}
}
